  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "semistandard": "^17.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
